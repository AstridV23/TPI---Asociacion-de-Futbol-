generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Torneo {
  Torneo_ID                Int    @id @default(autoincrement())
  Categoria_Id             Int
  Division_Id              Int
  DNI_Encargado            Int
  Nombre                   String
  Fecha_Inicio             String
  Fecha_Fin                String
  Fecha_Inicio_Inscripcion String
  Fecha_Fin_Inscripcion    String

  // Relaciones
  categoria Categoria @relation(fields: [Categoria_Id], references: [Categoria_Id])
  division  Division  @relation(fields: [Division_Id], references: [Division_Id])
  encargado Persona   @relation(fields: [DNI_Encargado], references: [DNI])

  @@index([Categoria_Id])
  @@index([Division_Id])
  @@index([DNI_Encargado])
}

model Categoria {
  Categoria_Id Int      @id @default(autoincrement())
  Nombre       String
  torneos      Torneo[]

  @@index([Categoria_Id])
}

model Division {
  Division_Id Int      @id @default(autoincrement())
  Nombre      String
  torneos     Torneo[]

  @@index([Division_Id])
}

model Persona {
  DNI     Int      @id
  Nombre  String
  torneos Torneo[]

  @@index([DNI])
}
